{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container ml-auto mr-auto border mt-5 loginForm p-4">
    <h1 class="mb-3 mt-5 text-center" style="font-size:1.8rem"> Page d'inscription </h1>
    {{ form_start(registrationForm) }} 
    <div class="row">
        <div class="col-xs-12 col-lg-6">
             {{ form_row(registrationForm.firstName) }}
        </div>
        <div class="col-xs-12 col-lg-6">
             {{ form_row(registrationForm.lastName) }}
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-6">
             {{ form_row(registrationForm.email) }}
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            {{ form_row(registrationForm.plainPassword)}}
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <button type="submit" class="btn btn-primary rounded mb-5">Créer mon compte Spacetrip</button>
    </div>
    <div class="row">
        <a href="{{path('app_login')}}" class="d-block btn btn-success btn-sm ml-auto mr-auto mb-5 rounded"> J'ai déja un compte Spacetrip</a>
    </div>
    {{ form_end(registrationForm) }} 
</div>

{% endblock %}

