    {{form_start(form)}}
    <div class="row">
        <div class="col-xs-12 col-lg-6 pr-4">
            <div class="row d-block">
                {{form_row(form.name)}}
            </div>
            <div class="row d-block">
                {{form_row(form.spacecrafts)}}
            </div>
        </div>
        <div class="col-xs-12 col-lg-6 mt-4 pl-4">
            <div class="row">
                <div class="col">
                    <div class="btn btn-success btn-sm">Je connais la distance Terre -> Planète</div>
                </div>
                <div class="col">
                    <div class="btn btn-danger btn-sm">Je ne connais pas la distance Terre -> Planète</div>
                </div>
            </div>
            <div class="row d-block mt-2">
            {{form_row(form.distance)}}
            </div>
        </div>
    </div>
    <div class="row d-block">
        {{form_row(form.description)}}
    </div>

    <div class="row">
        <button class="btn btn-primary w-50 ml-auto mr-auto">{% if action is same as 'create' %} Créer une nouvelle {% else %} Modifier une {% endif %}destination</button>
    </div>
    {{form_end(form)}}