{% extends 'base.html.twig' %}

{% block title %}Admin-Création d'un voyage{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1> Creation d'un nouveau voyage</h1>
    {% include('admin/trip/partials/_form.html.twig') %}
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function()
    {
        $('#reserved_button').on('change',function()
        {
            if($('#reserved_button:checked').val() === "1"){
                $('#name').attr('disabled', '').attr('placeholder','Non pris en compte pour les voyages réservés');
                $('#description').attr('disabled', '').attr('placeholder','Non pris en compte pour les voyages réservés');
                $('#available_seat_number').attr('disabled', '').attr('placeholder','Non pris en compte pour les voyages réservés');
            }
            else{
                $('#name').removeAttr('disabled').removeAttr('placeholder');
                $('#description').removeAttr('disabled').removeAttr('placeholder');
                $('#available_seat_number').removeAttr('disabled').removeAttr('placeholder');  
            }
        })
    })

</script>

{% endblock %}