{% extends 'base.html.twig' %}

{% block title %}[ADMIN] Liste des vaisseaux {% endblock %}

{% block body %}
<div class="container-fluid ml-auto mr-auto mt-5">
    <h1 class="text-center"> Liste des vaisseaux </h1>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Date de creation</th>
                    <th scope="col" class="text-center">Nom</th>
                    <th scope="col" class="text-center">Marque</th>
                    <th scope="col" class="text-center">Origine</th>
                    <th scope="col" class="text-center">Destinations possibles</th>
                    <th scope="col" class="text-center">Prix</th>
                    <th scope="col" class="text-center">Note moyenne</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for spacecraft in spacecrafts %}
                <tr>
                    <td class="text-center" scope="col">{{spacecraft.createdAt|date('d/m/Y H:i:s')}}</td>
                    <td class="text-center" scope="col">{{spacecraft.name}}</td>
                    <td class="text-center" scope="col">{{spacecraft.brand}}</td>
                    <td class="text-center" scope="col">{{spacecraft.nationality}}</td>
                    <td class="text-center" scope="col">{{spacecraft.possibleDestination}}</td>
                    <td class="text-center" scope="col">{{spacecraft.price}}</td>
                    <td class="text-center" scope="col">{{spacecraft.rating}}</td>
                    <td scope="col">
                        <a href="{{path('app_admin_spacecraft_edit',{'id':spacecraft.id})}}" class="btn btn-warning btn-sm">Editer</a>
                        <a href="{{path('app_admin_spacecraft_delete',{'id':spacecraft.id})}}" class="btn btn-danger btn-sm"> Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
