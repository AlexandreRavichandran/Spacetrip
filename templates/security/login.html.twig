{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container w-25 ml-auto mr-auto border mt-5">
    <form method="post" class="">
        {% if error %}
            <div class="alert alert-danger mt-2 w-100 text-center ">{{ error.messageKey|trans(error.messageData, 'security','fr_FR') }}</div>
        {% endif %}
        
        <h1 class="mb-3 mt-5 text-center"> Page de connexion</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required>
        <label for="inputPassword" class="mt-3">Mot de passe : </label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
    <div class="row mt-5">
        <button class="btn btn-primary mb-5 ml-auto mr-auto " type="submit"> Se connecter </button>
    </div>

    </form>
</div>
{% endblock %}
