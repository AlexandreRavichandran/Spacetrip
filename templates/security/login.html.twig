{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container w-75 ml-auto mr-auto border mt-5 loginForm p-4">
    <div class="row">
        <div class="col-12">
            <form method="post" class="d-flex justify-content-center flex-column">
                {% if error %}
                <div class="alert alert-danger mt-2 w-100 text-center ">{{ error.messageKey|trans(error.messageData, 'security','fr_FR') }}</div>
                {% endif %}

                <h1 class="mb-3 mt-5 text-center" style="font-size:1.8rem"> Page de connexion</h1>
                <label for="inputEmail" class="text-center">Email : </label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-75 form-control ml-auto mr-auto" required>
                <label for="inputPassword" class="text-center mt-3">Mot de passe : </label>
                <input type="password" name="password" id="inputPassword" class="w-75 form-control ml-auto mr-auto" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row mt-5">
                    <button class="btn btn-primary mb-5 ml-auto mr-auto " type="submit"> Se connecter </button>
                </div>
                <div class="row">
                    <a href="{{path('app_register')}}" class="d-block btn btn-success btn-sm rounded ml-auto mr-auto mb-5"> Je n'ai pas de compte Spacetrip</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container mt-4 comment p-4">
    <div class="row">
        <h5 class="ml-auto mr-auto"> Discovering the app ? Try one of theses accounts </h5>
    </div>
        <div class="border p-2">
            <p class="text-center"> Standard user Account </p>
            <p class="text-center">Email : <span id="commentRandomUsername"></span> <a href="#" class="ml-4 pt-2" id="clipboardLogo"> <i class="h3 bi bi-clipboard mt-1"></i></a> </p>
            <p id="commentRandomPassword" class="text-center"> Password : demo </p>
        </div>
    <div class="row mt-2">
        <a href="#" id="randomUserButton" class="btn btn-primary d-block ml-auto mr-auto">Not working or want to have new account ? click here to refresh datas</a>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
    randomUserGenerator();
</script>
{% endblock %}