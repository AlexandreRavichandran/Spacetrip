{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mt-5 d-flex justify-content-between">
        <div class="col-4">
            <div class="row">
                <h3 class="ml-auto mr-auto"> Vos informations </h3>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <td>Nom</td>
                        <td>{{app.user.lastName}}</td>
                    </tr>
                    <tr>
                        <td>Prenom</td>
                        <td>{{app.user.firstName}}</td>
                    </tr>
                    <tr>
                        <td>Adresse e-mail</td>
                        <td>{{app.user.email}}</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr class="table">
                        <td colspan="3" class="text-right"><button class="btn btn-sm btn-info">Editer</button></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-6">
            <div class="row">
                <h3 class="ml-auto mr-auto">derniers commentaires </h3>
            </div>
            <table class="table">

                <tbody>
                    <tr>
                        <th>Date</th>
                        <th>Vaisseau</th>
                        <th>Commentaire</th>
                    </tr>
                    {% for feedback in feedbacks %}
                    <tr>
                        <td>{{feedback.createdAt|date('d/m/Y')}} </td>
                        <td> {{feedback.spacecraft.name|upper}}</td>
                        <td> {{feedback.content}}</td>
                    </tr>
                    {% endfor %}
                 
                </tbody>
            </table>
        </div>

    </div>



</div>
{% endblock %}
